{
  "manifest_version": 2,

  "name": "LinkSlingr",
  "version": "0.0.1",
  "description": "Throw a link from one computer to another.",

  "browser_action": {
    "default_icon": "icons/icon128.png"
  },

  "background": {
    "scripts": ["event.js"],
    "persistent": true
  },
  
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ],
  
  "options_page": "options.html"
}